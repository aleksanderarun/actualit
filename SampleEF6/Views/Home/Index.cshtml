@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Contacts</h2>

<div ng-app="" ng-controller="contactController" class="container">
    <strong class="error">{{ error }}</strong>

    <div class="row" ng-show="modalActive">
        <div class="logs-table col-xs-12">
            <table class="table table-bordered table-hover" style="width:100%">
                <tr>
                    <th>FirstName </th>
                    <th>LastName </th>
                    <th>View</th>
                </tr>

                <tr ng-repeat="contact in contacts">
                    <td>{{ contact.FirstName }}</td>
                    <td>{{ contact.LastName }}</td>
                    <td><button ng-click="viewContact(contact.Id)">View</button></td>
                    <td><button ng-click="show_modal(contact)">Delete</button></td>
                </tr>

            </table>
            <div ng-show="viewed">
                <table class="table table-bordered table-hover" style="width:100%">
                    <tr>
                        <th>FirstName </th>
                        <th>LastName </th>
                        <th>Address </th>
                        <th>Telephone number </th>
                    </tr>
                    <tr>

                        <td>{{ singleContact.FirstName }}</td>
                        <td>{{ singleContact.LastName }}</td>
                        <td>{{ singleContact.Address }}</td>
                        <td>{{ singleContact.TelNum}}</td>
                        <td><button ng-click="show_modal(singleContact)">Delete</button></td>
                    </tr>

                </table>

            </div>



        </div>
    </div>


    <div class="{{m_show}}" tabindex="1" role="dialog">


        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure to delete this contact?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>{{deleteContact.FirstName}} {{deleteContact.LastName}} {{deleteContact.Address}} {{deleteContact.TelNum}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary"  data-dismiss="modal"  ng-click="closeDeleteModal()">Yes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" ng-click="closeModal()">No</button>
                </div>
            </div>
        </div>
    </div>


</div>



